@model IEnumerable<BeSafeWebApp.Contracts.Models.MasterItemsSet>

<div class="col-md-12 form-group">
    @foreach (var masterItem in Model)
    {
<div class="form-group">
    @if (masterItem.ItemType.ToUpper() == "LIEN" || masterItem.ItemType.ToUpper() == "AUTRE")
    {
        <a href="@masterItem.ItemLink" class="btn btn-md btn-link" target="_blank">@masterItem.Name</a> 
    }
    else
    {
        <a asp-controller="MasterItemSet"
       asp-action="Download"
       asp-route-id="@masterItem.ItemId">Click Here to Download : @masterItem.Name</a>
    }
    <a href="#" class="exit-btn pull-left" onclick="DeleteCategoryItem('@Url.Action("DeleteCategoryItem","MasterItemSet",null,Context.Request.Scheme)','@masterItem.ItemId','@masterItem.CategoryId')">
        <span class="glyphicon glyphicon-remove"></span>
    </a>
</div>}
</div>
