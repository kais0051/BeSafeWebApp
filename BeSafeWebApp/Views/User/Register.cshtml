@model BeSafeWebApp.Contracts.Models.User
@{
    Layout = null;
}
<script type="text/javascript">

    function preventBack(){window.history.forward();}
    setTimeout("preventBack()", 0);
    sessionStorage.clear();
    window.onunload=function(){null};
</script>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Lumino - Login</title>
    <link href="@Url.Content("~/css/bootstrap.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/css/datepicker3.css")" rel="stylesheet">
    <link href="@Url.Content("~/css/styles.css")" rel="stylesheet">
    <!--[if lt IE 9]>
        <script src="js/html5shiv.js"></script>
        <script src="js/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div class="row">
        <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">Register</div>
                <div class="panel-body">
                    <form role="form" method="post" enctype="multipart/form-data" asp-controller="User" asp-action="Register">
                        <fieldset>

                            <div class="form-group">
                                <label asp-for="UserName"></label>
                                <input asp-for="UserName" class="form-control" type="text" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password"></label>
                                <input asp-for="Password" class="form-control" type="password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Name"></label>
                                <input asp-for="Name" class="form-control" type="text" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input asp-for="Email" class="form-control" type="email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ContactNumber"></label>
                                <input asp-for="ContactNumber" class="form-control" type="email" />
                                <span asp-validation-for="ContactNumber" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Phone"></label>
                                <input asp-for="Phone" class="form-control" type="text" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="IsActive"></label>
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                <span asp-validation-for="IsActive" class="text-danger"></span>
                            </div>
                            
                            <input type="submit" value="Submit" class="btn btn-primary" />
                            @Html.ActionLink("Login", "Login", "Home",null, new { @class = "btn btn-warning", @style = "float: right;" })
                        </fieldset>
                    </form>
                </div>
            </div>
        </div><!-- /.col-->
    </div><!-- /.row -->


    <script src="@Url.Content("~/js/jquery-1.11.1.min.js")"></script>
    <script src="@Url.Content("~/js/bootstrap.min.js")"></script>
</body>
</html>
