@model BeSafeWebApp.Contracts.Models.UserLogin
@{
    Layout = null;
}
<script type="text/javascript">

    function preventBack() { window.history.forward(); }
    setTimeout("preventBack()", 0);
    sessionStorage.clear();
    window.onunload = function () { null };
</script>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>BeSafe - Login</title>
    <link href="@Url.Content("~/css/bootstrap.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/css/datepicker3.css")" rel="stylesheet">
    <link href="@Url.Content("~/css/styles.css")" rel="stylesheet">
    <!--[if lt IE 9]>
        <script src="js/html5shiv.js"></script>
        <script src="js/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div class="row">
        <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">Log in</div>
                <div class="panel-body">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            @Model.ErrorMessage
                        </div>
                    }
                    <form role="form" method="post" enctype="multipart/form-data" asp-controller="User" asp-action="Login">
                        <fieldset>

                            <div class="form-group">
                                <label asp-for="UserName">Nom d'utilisateur</label>
                                <input asp-for="UserName" class="form-control" type="text" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password">Mot de passe</label>
                                <input asp-for="Password" class="form-control" type="password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                           
                            <input type="submit" value="Login" class="btn btn-primary" />
                            @*@Html.ActionLink("Login", "Login", "Home", new { login = Model.login, password = Model.password }, new { @class = "btn btn-primary" })*@

                            @Html.ActionLink("Utilisateur invité",  "Index", "User", null, new { @class = "btn btn-warning", @style = "float: right;" })
                            <div style="margin-top: 50px">
                                <label>
                                    En se connectant j'accepte les <a target="_blank" href='@Url.ActionLink("Index", "Condition", null)'>conditions générales</a>
                                </label>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div><!-- /.col-->
    </div><!-- /.row -->


    <script src="@Url.Content("~/js/jquery-1.11.1.min.js")"></script>
    <script src="@Url.Content("~/js/bootstrap.min.js")"></script>
</body>
</html>
