@model BeSafeWebApp.Models.LoginUser
@{
    Layout = null;
}
<script type = "text/javascript" >  
    function preventBack(){window.history.forward();}  
    setTimeout("preventBack()", 0); 
    sessionStorage.clear();
    window.onunload=function(){null};  
</script> 
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>BeSafe - Login</title>
    <link href="@Url.Content("~/css/bootstrap.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/css/datepicker3.css")" rel="stylesheet">
    <link href="@Url.Content("~/css/styles.css")" rel="stylesheet">
    <script src="@Url.Content("~/lib/jquery/dist/jquery.js")"></script>
    <script src="@Url.Content("~/js/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/js/chart.min.js")"></script>
    <script src="@Url.Content("~/js/chart-data.js")"></script>
    <script src="@Url.Content("~/js/easypiechart.js")"></script>
    <script src="@Url.Content("~/js/easypiechart-data.js")"></script>
    <script src="@Url.Content("~/js/bootstrap-datepicker.js")"></script>
    <script src="@Url.Content("~/js/custom.js")"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="@Url.Content("~/js/categorybinding.js")" ></script>
    @RenderSection("scripts", required: false)
</head>
<body>
<div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">Log in</div>
            <div class="panel-body">
                <form role="form">
                    <fieldset>
                    
                        <div class="form-group">
                            @Html.HiddenFor(model => model.login)
                            @Html.EditorFor(model => model.login, new {htmlAttributes = new {@class = "form-control", @placeholder = "E-mail", @name = "email", @type = "email"}})
                        </div>
                        <div class="form-group">
                            @Html.HiddenFor(model => model.password)
                            @Html.EditorFor(model => model.password, new {htmlAttributes = new {@class = "form-control", @placeholder = "password", @name = "password", @type = "password"}})
                        </div>
                        <div class="checkbox">
                            <label>
                                En se connectant j'accepte les <a href="@Html.ActionLink("Utilisateur invité", "Index", "Condition", null)">conditions générales</a>
                            </label>
                        </div>
                    @Html.ActionLink("Login", "Login", "Home", new {login = Model.login, password = Model.password}, new {@class = "btn btn-primary"})

                    @Html.ActionLink("Utilisateur invité", "Index", "User", null, new {@class = "btn btn-warning", @style = "float: right;"})
                 
                    </fieldset>
                </form>
            </div>
        </div>
    </div><!-- /.col-->
</div><!-- /.row -->	
	

<script src="@Url.Content("~/js/jquery-1.11.1.min.js")"></script>
<script src="@Url.Content("~/js/bootstrap.min.js")"></script>
</body>
</html>
